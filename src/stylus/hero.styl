.hero
  text-align center
  padding 4em 0
  &-image
    max-width 100%
  &-buttons
    padding-top 1.1em

@media screen and (min-width 1024px)
  .hero
    text-align left
    padding 1em 0
    &-grid
      display grid
      grid-template-columns 450px 1fr
      grid-template-areas 'content  image'
      align-items center
    &-image-container
      grid-area image
      position relative
      top 50px
      text-align center
    &-content
      grid-area content