.download
  text-align center
  padding 3em 0
  .u-wrapper
    > .u-p
      margin-bottom 3em
  &-grid
    margin-top 3em
    display grid
    grid-row-gap 2em
  &-item
    border-radius 1em
    padding 1.5em
    padding-top 2.5em
    background url('../images/bg-dots.svg') repeat-x center bottom 95px
    box-shadow 0 10px 11px -5px rgba(83, 104, 223, .4)
    .u-p
      margin-top 0.5em
      margin-bottom 4em