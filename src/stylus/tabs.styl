.tabs
  margin-top 2em
  border-top 1px solid var(--grayishBlue)
  &-link
    border-bottom 1px solid var(--grayishBlue)
  &-content
    display: none
    img
      max-width 100%
      margin-bottom 1.5em
  &-grid
    margin-top 4em
  label
    padding 1em 0
    display block
    position relative
    &:after
      display none
      content ''
      position absolute
      bottom 0
      width 50%
      left 0
      transform translateX(50%)
      height 5px
      border-radius 2.5px
      background-color #FA5858

  input[type='radio']
    display none
// controll tabs
  input[id="bookmarking"]:checked
    ~ ul [for='bookmarking']:after
      display block
    ~ .tabs-grid #tab-bookmarking
      display block
  input[id="searching"]:checked
    ~ ul [for='searching']:after
      display block
    ~  .tabs-grid #tab-searching
      display block
  input[id="sharing"]:checked
    ~ ul [for='sharing']:after
      display block
    ~ .tabs-grid #tab-sharing
      display block

@media screen and (min-width 1024px)
  .tabs
    border none
    ul
      display flex
      justify-content center
    label
      padding 1.1em 2.9em 2em
      &:after
        width 100%
        transform translateX(0%)
    &-content
      grid-template-columns 535px 1fr
      grid-gap: 5em
      align-items center
      text-align left

    // controll tabs
  input[id="bookmarking"]:checked
    ~ ul [for='bookmarking']:after
      display flex
    ~ .tabs-grid #tab-bookmarking
      display grid
  input[id="searching"]:checked
    ~ ul [for='searching']:after
      display flex
    ~  .tabs-grid #tab-searching
      display grid
  input[id="sharing"]:checked
    ~ ul [for='sharing']:after
      display flex
    ~ .tabs-grid #tab-sharing
      display grid

































