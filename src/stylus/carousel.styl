.carousel
  text-align left
  margin-bottom 2.8em
  &-content
    &[open]
      .carousel
        &-header
          border none
          &::-webkit-details-marker
            color var(--softRed)
  &-header
    padding 1em 0
    text-align left
    border-bottom 1px solid #e5e5e5
    font-size .9em
    &:focus
      outline none
    &::-webkit-details-marker
      float right
      color var(--softBlue)


@media screen and (min-width 1024px)
  .questions
    .u-wrapper
      .u-p
        margin-bottom 1.9em
  .carousel
    margin-bottom 3.5em
    &-header
      padding 1.8em 0