@import './hero.styl'
@import './header.styl'
@import './features.styl'

:root
  --softBlue: hsl(231, 69%, 60%)
  --softRed: hsl(0, 94%, 66%)
  --grayishBlue: hsl(229, 8%, 60%)
  --veryDarkBlue: hsl(229, 31%, 21%)

body
  font-family: 'Rubik', sans-serif
  color: var(--veryDarkBlue)
  margin 0

ul
  padding 0
  list-style none
  margin 0

.u-wrapper
  max-width 1280px
  margin auto
  padding 0 1em

.u-h1
  font-size 2em

.u-h2
  @extends .u-h1

.u-p
  color var(--grayishBlue)
  line-height 1.8
  font-size .9em

.u-button
  background-color var(--softBlue)
  color #ffffff
  border none
  padding 1em  1em
  font-size .9em
  border-radius .5em
  font-weight 500
  margin-left 1.5em
  box-shadow 0 5px 10px -5px var(--softBlue)
  cursor pointer
  &:first-of-type
    margin  0
  &.is-gray
    background-color #f7f7f7
    color var(--veryDarkBlue)

.is-hidden
  display none